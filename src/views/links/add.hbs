<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1> Registro de Tareas</h1>
            <div class="card">
                <div class="card-body">
                <form action="/links/add" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                        <label for="inputid">Id Usuario</label>
                        <input type="text"  maxlength="4" class="form-control" name="id" placeholder="Clave">
                        </div>
                        <div class="form-group col-md-6">
                        <label for="inputusername">Nombre</label>
                        <input type="text" class="form-control" name="nombre" placeholder="Autor de la Tarea">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtareaname">Tarea</label>
                        <input type="text" class="form-control" name="tarea" placeholder="DescripciÃ³n de la Tarea">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                        <label for="inputestatus">Estado</label>
                        <select name="estado" class="form-control">
                            <option selected>Pendiente</option>
                            <option selected>Realizado</option>
                            <option selected>Cancelado</option>
                            <option selected>...</option>
                        </select>
                        </div>
                        <div class="form-group col-md-4">
                        <label for="inputasignado">Asignado</label>
                        <select name="asignado" class="form-control">
                            <option selected>Alumno</option>
                            <option selected>Alumno2</option>
                            <option selected>Alumno3</option>
                            <option selected>...</option>
                        </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputobservaciones">Observaciones</label>
                        <textarea name="observacion" rows="4"  class="form-control" ></textarea>
                    </div>
                    <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Agregar Tarea</button>
                    </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>